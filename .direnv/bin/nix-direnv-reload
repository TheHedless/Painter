#!/usr/bin/env bash
set -e
if [[ ! -d "/large/Mainframe/Projects/Rust/painter-rs" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/large/Mainframe/Projects/Rust/painter-rs")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/large/Mainframe/Projects/Rust/painter-rs" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/large/Mainframe/Projects/Rust/painter-rs/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/large/Mainframe/Projects/Rust/painter-rs/.envrc" "/large/Mainframe/Projects/Rust/painter-rs/.direnv"/*.rc
